{
  "compilerOptions": {
    "target": "ES2020",                   
    "module": "NodeNext",                
    "strict": true,                       
    "esModuleInterop": true,             
    "skipLibCheck": true,                 
    "forceConsistentCasingInFileNames": true, 
    "outDir": "src/dist",                   
    "rootDir": "./src",                   
    "resolveJsonModule": true,           
    "moduleResolution": "nodenext",          
    "baseUrl": "./src",                      
    "paths": {                           
      "@/*": ["./*"]
    }
  },
  "include": ["src"],                   
  "exclude": ["node_modules", "dist"]   
}
